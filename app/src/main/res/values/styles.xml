<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_bg_color_black</item>
        <item name="colorPrimaryDark">@color/theme_bg_color_black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLaunch" parent="AppTheme"></style>

    <style name="MenuColunmStyle">
        <item name="android:textSize">40.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppTheme.Launcher">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/welcome_default2</item>
    </style>

    <style name="SettingMenuTvStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/setting_act_textcolor_common</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="SettingMenuRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="LunarDialg" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>
